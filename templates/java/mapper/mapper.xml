<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{package_name}}.dao.{{class_name}}Dao">

    <resultMap id="BaseResultMap" type="{{package_name}}.bean.{{class_name}}">
        {% for column in java_columns %}
        <result column="{{column.db_name}}" property="{{column.java_name}}" jdbcType="{{column.db_type}}"/>{% endfor %}

    </resultMap>

    <sql id="Base_Column_List">
        {% for column in java_columns %} {{column.db_name}},{% endfor %}
    </sql>

    <select id="query" parameterType="{{package_name}}.bean.{{class_name}}" resultMap="BaseResultMap">

    </select>

    <select id="query{{class_name}}List" parameterType="{{package_name}}.bean.{{class_name}}" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from {{table_name}}
        where 1=1 {% for column in java_columns %}
        <if test="{{column.java_name}} != null">
            and {{column.db_name}} = #{ {{column.java_name}}}
        </if>{% endfor %}
    </select>

    <insert id="insert" parameterType="{{package_name}}.bean.{{class_name}}">
        insert into {{table_name}}
        <trim prefix="(" suffix=")" suffixOverrides=",">{% for column in java_columns %}
            <if test="{{column.java_name}} != null">
                {{column.db_name}},
            </if>{% endfor %}
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">{% for column in java_columns %}
            <if test="{{column.java_name}} != null">
                #{ {{column.java_name}},jdbcType={{column.db_type}} },
            </if>{% endfor %}
        </trim>
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from {{table_name}} where id = #{id,jdbcType=DECIMAL}
    </delete>

    <update id="update" parameterType="{{package_name}}.bean.{{class_name}}">
        update {{table_name}}
        <set>{% for column in java_columns %}
            <if test="{{column.java_name}} != null">
                {{column.db_name}} = #{ {{column.java_name}},jdbcType={{column.db_type}}},
            </if>{% endfor %}
        </set>
        where 1=1 {% for column in java_columns %}
        <if test="{{column.java_name}} != null">
            and {{column.db_name}} = #{ {{column.java_name}}}
        </if>{% endfor %}
    </update>

</mapper>